<xsl:stylesheet version="1.0" xmlns:app="http://www.deegree.org/app"
    xmlns:AD="urn:x-inspire:specification:gmlas:Addresses:3.0"
    xmlns:GN="urn:x-inspire:specification:gmlas:GeographicalNames:3.0"
    xmlns:base="urn:x-inspire:specification:gmlas:BaseTypes:3.2"
    xmlns:gml="http://www.opengis.net/gml"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
    <xsl:output method="xml" version="1.0" encoding="UTF-8"/>

    <xsl:template name="ADDRESS">
        <AD:Address>
            <xsl:attribute name="gml:id"><xsl:value-of select="AD:Address/@gml:id"/></xsl:attribute>
            <xsl:apply-templates select="AD:Address"/>
        </AD:Address>
    </xsl:template>

    <xsl:template match="AD:Address" name="AddressTemplate">

        <xsl:if test="boolean(AD:inspireId)">
            <AD:inspireId>
                <base:Identifier>
                    <base:localId>
                        <xsl:value-of select="AD:inspireId/AD:Identifier/AD:localId"/>
                    </base:localId>
                    <base:namespace>
                        <xsl:value-of select="AD:inspireId/AD:Identifier/AD:namespace"/>
                    </base:namespace>
                </base:Identifier>
            </AD:inspireId>
        </xsl:if>
        <xsl:if test="boolean(AD:position)">
            <AD:position>
                <AD:GeographicPosition>
                    <AD:geometry>
                        <gml:Point>
                            <xsl:attribute name="gml:id"><xsl:value-of select="concat(./@gml:id,'_P')" xmlns:gml="http://www.opengis.net/gml"/></xsl:attribute>
                            <gml:pos>
                                <xsl:value-of select="AD:position/AD:GeographicPosition/AD:geometry/gml:Point/gml:pos" xmlns:gml="http://www.opengis.net/gml"/>
                            </gml:pos>
                        </gml:Point>
                    </AD:geometry>
                     <AD:specification>
                        <xsl:value-of select="AD:position/AD:GeographicPosition/AD:specification"/>
                     </AD:specification>
                    <AD:method>
                       <xsl:value-of select="AD:position/AD:GeographicPosition/AD:method"/>
                    </AD:method>
                    <AD:default>
                        <xsl:value-of select="AD:position/AD:GeographicPosition/AD:default"/>
                    </AD:default>
                </AD:GeographicPosition>
            </AD:position>
        </xsl:if>
        <xsl:if test="boolean(AD:locator)">
            <AD:locator>
                <AD:AddressLocator>
                    <AD:designator>
                        <AD:LocatorDesignator>
                            <AD:designator><xsl:value-of select="AD:locator/AD:AddressLocator/AD:designator/AD:LocatorDesignator/AD:designator" xmlns:gml="http://www.opengis.net/gml"/></AD:designator>
                            <AD:type><xsl:value-of select="AD:locator/AD:AddressLocator/AD:designator/AD:LocatorDesignator/AD:type" xmlns:gml="http://www.opengis.net/gml"/></AD:type>
                        </AD:LocatorDesignator>
                    </AD:designator>
                    <AD:level>
                        <xsl:value-of select="AD:locator/AD:AddressLocator/AD:level" xmlns:gml="http://www.opengis.net/gml"/>
                    </AD:level>
                </AD:AddressLocator>
            </AD:locator>
        </xsl:if>
        <AD:validFrom xsi:nil="true" nilReason="UNKNOWN"/>
        <AD:validTo xsi:nil="true" nilReason="UNKNOWN"/>
        <AD:beginLifespanVersion xsi:nil="true" nilReason="UNKNOWN"/>
        <AD:endLifespanVersion xsi:nil="true" nilReason="UNKNOWN"/>
        <xsl:if test="boolean(AD:component)">
            <xsl:apply-templates select="AD:component/AD:AddressComponent"/>
        </xsl:if>
    </xsl:template>

    <xsl:template match="AD:AddressComponent">
        <xsl:for-each select="*">
            <AD:component>
                <xsl:copy-of select="./@xlink:href"/>
            </AD:component>
        </xsl:for-each>
    </xsl:template>

</xsl:stylesheet>
