<?xml version="1.0" encoding="UTF-8"?>
<FeatureTypeStyle
		xmlns="http://www.opengis.net/se"
		xmlns:ogc="http://www.opengis.net/ogc"
		xmlns:au="urn:x-inspire:specification:gmlas:AdministrativeUnits:3.0"
		xmlns:base="urn:x-inspire:specification:gmlas:BaseTypes:3.2"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.opengis.net/se http://schemas.opengis.net/se/1.1.0/FeatureStyle.xsd">

	<FeatureTypeName>au:AdministrativeUnit</FeatureTypeName>

	<Rule>
		<Description>
			<Title>INSPIRE AdministrativeUnits (AU)</Title>
		</Description>

		<ogc:Filter>
			<ogc:PropertyIsEqualTo>
				<ogc:PropertyName>au:nationalLevel</ogc:PropertyName>
				<ogc:Literal>1stOrder</ogc:Literal>
			</ogc:PropertyIsEqualTo>
		</ogc:Filter>

		<PolygonSymbolizer>
			<Geometry>
				<ogc:PropertyName>au:geometry</ogc:PropertyName>
			</Geometry>

			<Fill>
				<SvgParameter name="fill">
					<ogc:Literal>#FF9933</ogc:Literal>
				</SvgParameter>
				<SvgParameter name="fill-opacity">
					<ogc:Literal>0.4</ogc:Literal>
				</SvgParameter>
			</Fill>
			<Stroke>
				<SvgParameter name="stroke">#CC6600</SvgParameter>
				<SvgParameter name="stroke-width">1</SvgParameter>
			</Stroke>
		</PolygonSymbolizer>
	</Rule>

	<Rule>
		<ogc:Filter>
			<ogc:PropertyIsEqualTo>
				<ogc:PropertyName>au:nationalLevel</ogc:PropertyName>
				<ogc:Literal>1stOrder</ogc:Literal>
			</ogc:PropertyIsEqualTo>
		</ogc:Filter>
		<TextSymbolizer>
			<Geometry>
				<ogc:Function name="Centroid">
					<ogc:PropertyName>au:geometry</ogc:PropertyName>
				</ogc:Function>
			</Geometry>
			<Label>
				<ogc:PropertyName>au:nationalCode</ogc:PropertyName>
			</Label>
			<Font>
				<SvgParameter name="font-family">Arial</SvgParameter>
				<SvgParameter name="font-weight">Normal</SvgParameter>
				<SvgParameter name="font-size">10</SvgParameter>
			</Font>
			<LabelPlacement>
				<PointPlacement>
					<Displacement>
						<DisplacementX>0</DisplacementX>
						<DisplacementY>-15</DisplacementY>
					</Displacement>
				</PointPlacement>
			</LabelPlacement>
			<Halo>
				<Radius>2</Radius>
				<Fill>
					<SvgParameter name="fill">#FFFFFF</SvgParameter>
				</Fill>
			</Halo>
			<Fill>
				<SvgParameter name="fill">#0000CC</SvgParameter>
			</Fill>
		</TextSymbolizer>
	</Rule>

</FeatureTypeStyle>
