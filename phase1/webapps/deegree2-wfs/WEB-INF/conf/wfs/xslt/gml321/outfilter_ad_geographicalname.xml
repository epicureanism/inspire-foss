<xsl:stylesheet version="1.0" xmlns:app="http://www.deegree.org/app"
				xmlns:base="urn:x-inspire:specification:gmlas:BaseTypes:3.2"
				xmlns:gml="http://www.opengis.net/gml/3.2"
				xmlns:wfs="http://www.opengis.net/wfs"
				xmlns:xlink="http://www.w3.org/1999/xlink"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
				xmlns:AD="urn:x-inspire:specification:gmlas:Addresses:3.0"
				xmlns:GN="urn:x-inspire:specification:gmlas:GeographicalNames:3.0"
		>
	<xsl:output method="xml" version="1.0" encoding="UTF-8" indent="yes"/>

	<xsl:template match="AD:GeographicalName" name="GeographicalNameTemplate">
		<GN:language xmlns:gml="http://www.opengis.net/gml/3.2">
			<xsl:value-of select="AD:language/."/>
		</GN:language>
		<xsl:if test="boolean(AD:nativeness)">
			<GN:nativeness xmlns:gml="http://www.opengis.net/gml/3.2">
				<xsl:value-of select="AD:nativeness"/>
			</GN:nativeness>
		</xsl:if>
		<xsl:if test="boolean(AD:nameStatus)">
			<GN:nameStatus xmlns:gml="http://www.opengis.net/gml/3.2">
				<xsl:value-of select="AD:nameStatus" xmlns:gml="http://www.opengis.net/gml"/>
			</GN:nameStatus>
		</xsl:if>
		<xsl:if test="boolean(AD:sourceOfName)">
			<GN:sourceOfName xmlns:gml="http://www.opengis.net/gml/3.2">
				<xsl:value-of select="AD:sourceOfName"/>
			</GN:sourceOfName>
		</xsl:if>
		<GN:pronunciation xmlns:gml="http://www.opengis.net/gml/3.2">
			<GN:PronunciationOfName/>
		</GN:pronunciation>
		<xsl:if test="boolean(AD:spelling)">
			<GN:spelling xmlns:gml="http://www.opengis.net/gml/3.2">
				<GN:SpellingOfName>
					<GN:text>
						<xsl:apply-templates select="AD:spelling/AD:SpellingOfName/AD:text/."/>
					</GN:text>
					<GN:script>
						<xsl:apply-templates select="AD:spelling/AD:SpellingOfName/AD:script/."/>
					</GN:script>
				</GN:SpellingOfName>
			</GN:spelling>
		</xsl:if>
	</xsl:template>
</xsl:stylesheet>
