<xsl:stylesheet version="1.0" xmlns:app="http://www.deegree.org/app"
				xmlns:AD="urn:x-inspire:specification:gmlas:Addresses:3.0"
				xmlns:GN="urn:x-inspire:specification:gmlas:GeographicalNames:3.0"
				xmlns:gml="http://www.opengis.net/gml"
				xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:output method="xml" version="1.0" encoding="UTF-8"/>

	<xsl:template name="ADDRESSAREANAME">
		<AD:AddressAreaName xmlns:gml="http://www.opengis.net/gml/3.2">
			<xsl:attribute name="gml:id">
				<xsl:value-of select="AD:AddressAreaName/@gml:id" xmlns:gml="http://www.opengis.net/gml"/>
			</xsl:attribute>
			<xsl:apply-templates select="AD:AddressAreaName"/>
		</AD:AddressAreaName>
	</xsl:template>

	<xsl:template match="AD:AddressAreaName" name="AddressAreaNameTemplate">
		<!-- <xsl:copy-of select="gml:boundedBy"/> -->
		<xsl:if test="boolean(AD:alternativeIdentifier)">
			<AD:alternativeIdentifier xmlns:gml="http://www.opengis.net/gml/3.2">
				<xsl:value-of select="AD:alternativeIdentifier"/>
			</AD:alternativeIdentifier>
		</xsl:if>
		<AD:beginLifespanVersion xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<AD:endLifespanVersion xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<AD:validFrom xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<AD:validTo xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<xsl:if test="boolean(AD:name)">
			<AD:name xmlns:gml="http://www.opengis.net/gml/3.2">
				<GN:GeographicalName>
					<xsl:apply-templates select="AD:name/AD:GeographicalName"/>
				</GN:GeographicalName>
			</AD:name>
		</xsl:if>
		<AD:namedPlace xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
	</xsl:template>

</xsl:stylesheet>
