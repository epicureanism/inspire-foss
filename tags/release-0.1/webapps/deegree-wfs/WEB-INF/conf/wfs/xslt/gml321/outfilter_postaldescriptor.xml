<xsl:stylesheet version="1.0" xmlns:app="http://www.deegree.org/app"
				xmlns:AD="urn:x-inspire:specification:gmlas:Addresses:3.0"
				xmlns:GN="urn:x-inspire:specification:gmlas:GeographicalNames:3.0"
				xmlns:gml="http://www.opengis.net/gml"
				xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:output method="xml" version="1.0" encoding="UTF-8"/>

	<xsl:template name="POSTALDESCRIPTOR">
		<AD:PostalDescriptor xmlns:gml="http://www.opengis.net/gml/3.2">
			<xsl:attribute name="gml:id">
				<xsl:value-of select="AD:PostalDescriptor/@gml:id" xmlns:gml="http://www.opengis.net/gml"/>
			</xsl:attribute>
			<xsl:apply-templates select="AD:PostalDescriptor"/>
		</AD:PostalDescriptor>
	</xsl:template>

	<xsl:template match="AD:PostalDescriptor" name="PostalDescriptorTemplate">
		<!-- <xsl:copy-of select="gml:boundedBy"/> -->
		<AD:beginLifespanVersion xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<AD:endLifespanVersion xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<AD:status xmlns:gml="http://www.opengis.net/gml/3.2">
			<xsl:value-of select="AD:PostalDescriptor/AD:status" xmlns:gml="http://www.opengis.net/gml"/>
		</AD:status>
		<AD:validFrom xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<AD:validTo xsi:nil="true" nilReason="UNKNOWN" xmlns:gml="http://www.opengis.net/gml/3.2"/>
		<xsl:if test="boolean(AD:postName)">
			<AD:postName xmlns:gml="http://www.opengis.net/gml/3.2">
				<GN:GeographicalName>
					<xsl:apply-templates select="AD:postName/AD:GeographicalName"/>
				</GN:GeographicalName>
			</AD:postName>
		</xsl:if>
		<xsl:if test="boolean(AD:postCode)">
			<AD:postCode xmlns:gml="http://www.opengis.net/gml/3.2">
				<xsl:value-of select="AD:postCode" xmlns:gml="http://www.opengis.net/gml"/>
			</AD:postCode>
		</xsl:if>
	</xsl:template>
</xsl:stylesheet>
